@model PackageDelivery.GUI.Models.Core.PackageHistoryModel

@{
    ViewBag.Title = "Fecha Entrega";
}

<h4>Cambiar la Fecha de Entrega</h4>
<h6>ID de paquete: @Model.Id</h6>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.AdmissionDate)
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.Id_Package)
    @Html.HiddenFor(model => model.Id_Warehouse)

    <div class="form-group">
        @Html.LabelFor(model => model.DepurateDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.DepurateDate, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", @type = "datetime-local", @id = "selectedDateTime" })
            @Html.ValidationMessageFor(model => model.DepurateDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar Cambios" class="btn btn-info" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "Search", new { id = Model.Id })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
